{% for author in bundledata[whichAuthors] %}
  {% set authorUrl %}/authors/{{ author[0] | slugify }}/{% endset %}
  <div class="oneauthor">
    <a href="{{authorUrl}}" class="oneauthortitle">{{ author[0] }} <span class="reduced-to-base">({{ author[1] }})</span></a>
    <ul class="recentauthoritems">
      {% for item in bundledata.bundleRecords | postsByAuthor(author[0], 3) %}
        <li><a href="{{ item.Link }}" data-link-type="external">{{ item.Title }}</a></li>
      {% endfor %}
    </ul>
  </div>
{% endfor %}
