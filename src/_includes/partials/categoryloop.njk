{% for category in bundledata[whichCategories] %}
  {% set categoryUrl %}/categories/{{ category[0] | slugify }}/{% endset %}
  <div class="onecategory">
    <a href="{{categoryUrl}}" class="onecattitle">{{ category[0] }} <span class="reduced-to-base">({{ category[1] }})</span></a>
    <ul class="recentcatitems">
      {% for item in bundledata.bundleRecords | postsInCategory(category[0], 3) %}
        <li><a href="{{ item.Link }}" data-link-type="external">{{ item.Title }}</a></li>
      {% endfor %}
    </ul>
  </div>
{% endfor %}
