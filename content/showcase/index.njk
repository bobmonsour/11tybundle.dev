      <ul role="list">
        <li><a href="/showcase" class="current">Sites</a></li>
        <li><a href="">RSS</a></li>
      </ul>
    </nav>
  </div>
</header>
<div class="section" data-pagefind-ignore="all">
  <div class="showcase__grid">
    {% for site in showcasedata.sites %}
      {% if loop.index <= 10 %}
        <img src="{{ site.screenshotpath }}" alt="Screenshot of {{ site.title }}" loading="lazy" width="320" height="180">
      {% endif %}
    {% endfor %}

