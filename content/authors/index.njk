---
eleventyComputed:
  title: "Authors"
  description: "A list of {{ bundledata.authorCount }} authors"
permalink: /authors/
---
<header class="main-header" data-pagefind-ignore>
  <div class="container">
    <h1>{{ title }} <data class="count" value="{{ bundledata.authorCount }}">{{ bundledata.authorCount }}</data></h1>
    <nav>
      <strong>By</strong>
      <ul role="list">
        <li><a href="/authors" class="current">Name</a></li>
        <li><a href="/authors/by-count/">Count</a></li>
      </ul>
    </nav>
  </div>
</header>
<section>
  <nav>
    <div class="container">
      <ul role="list" class="skip-links">
        {% for letter in bundledata.authorLetters %}
          <li><a href="#id-{{ letter }}">{{ letter }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </nav>
</section>


{# ***************************************
   Author array structure:

    [0] author name
    [1] slugified author name
    [2] first letter of author last name/word
    [3] total post count
    [4] origin (captured from first non-YouTube post)
    [5] favicon
    [6] RSS link
    [7] social links

*************************************** #}
{% set currentLetter = ""%}
{% set currentAuthor = ""%}

{% for author in bundledata.authors %}
  {% if (author[2] !== currentLetter) and (currentLetter !== "") %}
    </div>
    </section>
  {% endif %}
  {% if author[2] !== currentLetter %}
    <section data-pagefind-body>
      <div class="directory__layout container">
      <h2 id="id-{{ author[2] }}">{{ author[2] }}</h2>
      <article class="directory__grid">
  {% endif %}
    {% set currentLetter = author[2] %}
    <article class="directory__card directory--category">
      {% set authorUrl %}/authors/{{ author[0] | slugify }}/{% endset %}
      <h3>{{ author[5] | safe }}<a href="/authors/{{ author[1] }}">{{author[0] }}</a> <data class="count" value="{{ author[3] }}">{{ author[3] }}</data></h3>
      <ol role="list" class="directory--list">
        {% for item in bundledata.firehose | postsByAuthor(author[0], 3) %}
          <a href="{{ item.Link }}">{{ item.Title }}</a>
          <time datetime="{{ item.formattedDate }}">{{ item.formattedDate }}</time></li>
        {% endfor %}
      </ol>
    </article>
    {% if (author[0] !== currentAuthor)  and (currentAuthor  !== "") %}
      {% set currentAuthor = author[0] %}
      </article>
    {% endif %}
{% endfor %}
